{% extends 'base.html.twig' %}

{% block title %}Villes{% endblock %}

{% block body %}

    <h1>Liste des villes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>nom</th>
                <th>pays</th>
                <th>departement</th>
            </tr>
        </thead>
        <tbody>
            {% for ville in villes %}
            <tr>
                <td>{{ville.id}}</td>
                <td>{{ville.nom}}</td>
                <td>{{ville.pays}}</td>
                <td>{{ville.departement}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
